<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/teal_700"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imvIcon"
        android:layout_width="164dp"
        android:layout_height="217dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/Lo"
        android:src="@drawable/login" />

    <TextView android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="@string/Em"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:autofillHints="emailAddress"
        android:background="@color/DarkGreen"
        android:hint="@string/TyEm"
        android:inputType="textWebEmailAddress"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView android:id="@+id/txtPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/Pa"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/edtPass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:autofillHints="password"
        android:background="@color/DarkGreen"
        android:hint="@string/TyPa"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <Button android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="20sp"
        android:text="@string/Lo"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:backgroundTint="@color/white"/>

    <TextView android:id="@+id/txtNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/note"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="22sp" />

</LinearLayout>